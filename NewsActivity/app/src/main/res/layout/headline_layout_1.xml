<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <ImageView
        android:id="@+id/news_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="10dp"/>


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/published_text_view"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/news_image_view"
        android:text="Title test" />


    <TextView
        android:id="@+id/published_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/news_image_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/news_image_view"
        android:text="Published test" />

</RelativeLayout>
